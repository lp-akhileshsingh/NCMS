<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="4sp">

    <TextView
        android:id="@+id/tvUniqueId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="@dimen/activity_vertical_padding"
        android:weightSum="1">

        <TextView
            style="@style/style_text_view_bold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:text="@string/label_survey_date" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.03"
            style="@style/style_text_view_bold"
            android:gravity="center_vertical"
            android:text=":" />

        <TextView
            android:id="@+id/tvSurveyDate"
            style="@style/style_text_view_colored"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.67"
            android:text="@string/app_name" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="@dimen/activity_vertical_padding"
        android:weightSum="1">

        <TextView
            style="@style/style_text_view_bold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:text="@string/label_season_view" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.03"
            style="@style/style_text_view_bold"
            android:gravity="center_vertical"
            android:text=":" />

        <TextView
            android:id="@+id/tvSeason"
            style="@style/style_text_view_colored"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.67"
            android:text="@string/app_name" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="@dimen/activity_vertical_padding"
        android:weightSum="1">

        <TextView
            style="@style/style_text_view_bold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:text="@string/cs_Crop_Name_view" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.03"
            style="@style/style_text_view_bold"
            android:gravity="center_vertical"
            android:text=":" />

        <TextView
            android:id="@+id/tvCrop_Name"
            style="@style/style_text_view_colored"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.67"
            android:text="@string/app_name" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="@dimen/activity_vertical_padding"
        android:weightSum="1">

        <TextView
            style="@style/style_text_view_bold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:text="@string/cs_CropPattern" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.03"
            style="@style/style_text_view_bold"
            android:gravity="center_vertical"
            android:text=":" />

        <TextView
            android:id="@+id/tvCropPattern"
            style="@style/style_text_view_colored"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.67"
            android:text="@string/app_name" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="@dimen/activity_vertical_padding"
        android:weightSum="1">

        <TextView
            style="@style/style_text_view_bold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:text="@string/cs_Approx_Crop_view" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.03"
            style="@style/style_text_view_bold"
            android:gravity="center_vertical"
            android:text=":" />

        <TextView
            android:id="@+id/tvApprox_Crop"
            style="@style/style_text_view_colored"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.67"
            android:text="@string/app_name" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="@dimen/activity_vertical_padding"
        android:weightSum="1">

        <TextView
            style="@style/style_text_view_bold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:text="@string/cs_Contigeous_view" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.03"
            style="@style/style_text_view_bold"
            android:gravity="center_vertical"
            android:text=":" />

        <TextView
            android:id="@+id/tvContigeous"
            style="@style/style_text_view_colored"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.67"
            android:text="@string/app_name" />

    </LinearLayout>
</LinearLayout>
