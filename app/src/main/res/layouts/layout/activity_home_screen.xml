    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dip"
        android:gravity="center_horizontal|bottom"
        android:text="@string/credits"
        android:textColor="#FFFFFF"
